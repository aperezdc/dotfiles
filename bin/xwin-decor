#! /bin/bash
set -e

bit=1
case ${1:-on} in
	on) bit=1 ;;
	off) bit=0 ;;
esac

declare -a xprop_args=(
	-f _MOTIF_WM_HINTS 32c
	-set _MOTIF_WM_HINTS "0x2,0x0,0x${bit},0x0,0x0"
)

if [[ -n $2 ]] ; then
	xprop_args+=( -id "$2" )
elif [[ -n ${WINDOWID} ]] ; then
	xprop_args+=( -id "${WINDOWID}" )
fi

exec xprop "${xprop_args[@]}"
